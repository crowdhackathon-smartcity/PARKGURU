@using SmartOnStreetParking.Models
@using SmartOnStreetParking.Web.Utils
@using SmartOnStreetParking.Web.Extensions

@{ 
    Member SelectedMember = null;
    if (User.Identity.IsAuthenticated)
    {
        SelectedMember = ApplicationCache.GetMember(Convert.ToInt64(User.Identity.GetProperty("Member_Id")));
    }
}



<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Font Awesome -->


    @Styles.Render("~/Content/css")
   @* @Styles.Render("~/Content/font-awesome")*@
    @Scripts.Render("~/bundles/modernizr")

    <link href="@Url.Content("~/fonts/font-awesome/css/font-awesome.css")" rel="stylesheet" type="text/css" />
</head>
<body class="nav-md">

    <div class="container body">
        <div class="main_container">
            <!-- Navigation -->
            @if (User.Identity.IsAuthenticated && SelectedMember.Type == SmartOnStreetParking.Models.Enums.MemberType.Provider)
            {
                @Html.Partial("_Navigation")
            }
            else if (User.Identity.IsAuthenticated && SelectedMember.Type == SmartOnStreetParking.Models.Enums.MemberType.Developer)
            {
                @Html.Partial("_Navigation_Dev")
            }
            <!-- Top Navbar -->
            @Html.Partial("_TopNavbar")

            <div class="right_col" role="main">

                <!-- Main view  -->
                @RenderBody()

            </div>


                <!-- Footer -->
                @Html.Partial("_Footer")
            </div>


    </div>














